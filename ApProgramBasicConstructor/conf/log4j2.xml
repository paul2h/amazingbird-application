<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<Appenders>
		<Console name="Console">
			<PatternLayout
				pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %l{1} - %msg%n" />
		</Console>
		
	<RollingFile name="BasicLogFile" fileName="basiclogs/basiclog.log"
		filePattern="basiclogs/basiclog-%d{yyyyMMdd-HH}~%i.log">
		<PatternLayout>
			<Pattern>[%-5level] %d{yyyy-MM-dd HH:mm:ss} [%t] %c{1} - %msg%n
			</Pattern>
		</PatternLayout>
		<Policies>
			<TimeBasedTriggeringPolicy interval="1"
				modulate="true" />
			<SizeBasedTriggeringPolicy size="10 MB" />
		</Policies>
	</RollingFile>
	<RollingFile name="ServiceLog" fileName="servicelogs/servicelog.log"
		filePattern="servicelogs/controllerlog-%d{yyyyMMdd-HH}~%i.log">
		<PatternLayout>
			<Pattern>[%-5level] %d{yyyy-MM-dd HH:mm:ss} [%t] %c{1} - %msg%n
			</Pattern>
		</PatternLayout>
		<Policies>
			<TimeBasedTriggeringPolicy interval="1"
				modulate="true" />
			<SizeBasedTriggeringPolicy size="10 MB" />
		</Policies>
	</RollingFile>	
	</Appenders>

	
	<Loggers>
		<Root level="ERROR">
			<AppenderRef ref="Console" />
		</Root>
		<logger name="com.kiwi.ui" level="TRACE">
			<AppenderRef ref="BasicLogFile" />
		</logger>
		<logger name="com.kiwi.service" level="TRACE">
			<AppenderRef ref="ServiceLog" />
		</logger>		
	</Loggers>
</Configuration>